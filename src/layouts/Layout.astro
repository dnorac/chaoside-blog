---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
			<header class="flex items-center justify-between border-t-4 text-slate-600 border-blue-600 sticky top-0">
				<a href="/" class="p-12 text-xl"><h1>Chaoside</h1></a>
				<!-- <a href="/profile" class="flex items-center gap-4 p-12">
					<img src="https://picsum.photos/200" alt="" class="rounded-full w-12">
					<span>dnorac</span>
				</a> -->
			</header>
			<main class="max-w-2xl mx-auto">
				<slot />
			</main>
	</body>
</html>

<style is:global>
	*, *::before, *::after {
		margin: 0;
		box-sizing: border-box;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #ffffff;
	}

	body {
		@apply m-0 text-slate-700 pb-20;
	}
</style>
