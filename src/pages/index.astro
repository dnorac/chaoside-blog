---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const posts = await getCollection("blog");
---

<Layout title="Chaoside">
  <article class="divide-y-2 dark:divide-slate-800">
    {
      posts.map((post) => (
        <a
          href={`/articles/${post.slug}`}
          class="text-3xl text-slate-800 dark:text-slate-300 font-semibold block py-4"
        >
          {post.data.title}
        </a>
      ))
    }
  </article>
</Layout>
